<!DOCTYPE html>
<html>
  <head>
    <title>Rask</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'tab' %>
    <%= stylesheet_link_tag 'tasks' %>
    <%= stylesheet_link_tag 'users' %>
    <%= stylesheet_link_tag 'jfm' %>
    <%= stylesheet_link_tag 'github-markdown' %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.bundle.min.js"></script>
    <%# <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> %>
    <%# <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script> %>
    <%# <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script> %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <% flash.each do |message_type, message| %>
      <% message_color = {:notice => "blue", :success => "blue", :danger => "yellow", :alert => "red"} %>
      <p class="m-3 p-3 bg-<%= message_color[message_type.to_sym] %>-400 text-white rounded">
        <%= message %>
      </p>
    <% end %>
    <div class="flex">
      <div class="w-1/4 p-3">
        <%= render 'layouts/menu' %>
      </div>
      <div class="w-3/4">
        <div class="container mx-auto max-w-5xl p-5">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
