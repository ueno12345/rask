<div class="p-3 my-3 border rounded flex space-x-4">
  <div>
    <p class="text-xl"><%= link_to tag.name ,tag%></p>
    <p>タスク数 : <%= tag.tasks.count %></p>
    <p>文書数 : <%= tag.documents.count %></p>
  </div>
  <div class="flex-1"></div>
  <% if logged_in? %>
    <%= link_to '詳細', tag %>
    <%= link_to '編集', edit_tag_path(tag) %>
    <% if tag.tasks.count == 0 && tag.documents.count == 0 %>
      <%= link_to '削除', tag, method: :delete, data: { confirm: 'このタグを削除しますか？' } %>
    <% else %>
      <p class="text-gray-300">削除</p>
    <% end %>
  <% end %>
</div>